<div class="container">
  <h2 class="center">Create a new account</h2>
  <%if(typeof err!=='undefined' && err){%>
  <h3 class="err center"><%=err%></h3>
  <%}%>
  <%if(typeof flasherr!=='undefined' && flasherr.err && flasherr.err.length!=0){%>
  <h3 class="err center"><%=flasherr.err%></h3>
  <%}%>

  <div class="row">
    <div class="col s12 m8 offset-m2">
      <form action="#" method="POST">
        <div class="input-field col s12 m6">
          <input type="text" name="regno" required id="regno">
          <label for="regno">Registration no.</label>
        </div>
        <div class="input-field col s12 m6">
          <input type="text" name="name" required id="name">
          <label for="name">Name</label>
        </div>
        <div class="input-field col s12 m6">
          <input type="password" name="password" id="password">
          <label for="password">Password</label>
        </div>
        <div class="input-field col s12 m6">
          <input type="password" name="confirm" id="confirm">
          <label for="confirm">Confirm Password</label>
        </div>
        <br><br><br>
        <input type="hidden" name="_csrf" value="<%= _csrf %>">
        <button class="col s12 btn " type="submit" name="create_account_submit">Create a new account</button>

      </form>
    </div>
  </div>
</div>
